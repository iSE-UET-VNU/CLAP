<project name="java-ant project" default="compile">
    <property name="src" value=""/>
    <property name="out" value=""/>
    <mkdir dir="${out}"/>
    <target name="compile">
        <javac includeantruntime="false" srcdir="${src}" destdir="${out}"/>
    </target>
    <copy todir="${out}">
        <fileset dir="${src}" excludes="**/*.java"/>
    </copy>
</project>
