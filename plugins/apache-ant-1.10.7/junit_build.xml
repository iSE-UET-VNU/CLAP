<project name="java-ant project" default="compile">
    <property name="main" value=""/>
    <property name="test" value=""/>
    <target name="junit">
        <junit printsummary="yes" haltonfailure="yes">
            <classpath>
                <pathelement location="../junit-4.12.jar"/>
                <pathelement location="../hamcrest-core-1.3.jar"/>
                <pathelement location="../evosuite-1.0.6.jar"/>
                <pathelement location="${main}"/>
                <pathelement location="${test}"/>
            </classpath>

            <batchtest fork="yes">
                <fileset dir="${test}">
                    <include name="**/*Test.class"/>
                </fileset>
            </batchtest>

        </junit>
    </target>
</project>